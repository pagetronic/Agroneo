                                    <goals>
                                        <goal>install-file</goal>
                                    </goals>
                                </execution>
                            </executions>
                        </plugin>
                        -->
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>live.page</groupId>
            <artifactId>page-live-croner</artifactId>
            <version>[2.0.0,2.9.9)</version>
        </dependency>
    </dependencies>
</project>